<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.idont.checktime.CalendarEmplouyeeFragment">

    <com.desai.vatsal.mydynamiccalendar.MyDynamicCalendar
        android:id="@+id/myCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/today"
        android:background="#ed1547"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:textSize="20sp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/myCalendar"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/text_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=" : Today"
        android:paddingLeft="5dp"
        android:textSize="20sp"
        android:layout_alignBottom="@+id/today"
        android:layout_toEndOf="@+id/today" />

    <TextView
        android:id="@+id/holiday"
        android:background="#aad4ed"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:textSize="20sp"
        android:layout_alignBottom="@+id/text_today"
        android:layout_toEndOf="@+id/text_today"
        android:layout_marginStart="25dp"
        android:layout_alignTop="@+id/today" />

    <TextView
        android:id="@+id/text_holiday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=" : Holiday"
        android:paddingLeft="5dp"
        android:textSize="20sp"
        android:layout_alignBottom="@+id/holiday"
        android:layout_toEndOf="@+id/holiday" />

</RelativeLayout>
