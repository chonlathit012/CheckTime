<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progress"
        android:visibility="visible"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="3dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/company_photo"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="11dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:padding="7dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/company_photo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="8dp"
        android:src="@drawable/company"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>

    <TextView
        android:id="@+id/company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/company_photo"
        android:text="Comapany name : "
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/company_name"
        android:layout_alignStart="@+id/company_name"
        android:layout_below="@+id/company_name"
        android:layout_marginTop="8dp"
        android:text="Start time : " />

    <TextView
        android:id="@+id/finish_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/start_time"
        android:layout_alignBottom="@+id/start_time"
        android:layout_marginRight="8dp"
        android:layout_marginStart="26dp"
        android:layout_toEndOf="@+id/company_name"
        android:text="Finish time : " />

    <TextView
        android:id="@+id/textViewCompanyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_alignBaseline="@+id/company_name"
        android:layout_alignBottom="@+id/company_name"
        android:layout_toEndOf="@+id/company_name" />

    <TextView
        android:id="@+id/textViewStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_alignBaseline="@+id/start_time"
        android:layout_alignBottom="@+id/start_time"
        android:layout_toEndOf="@+id/start_time" />

    <TextView
        android:id="@+id/textViewFinishTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_alignBaseline="@+id/finish_time"
        android:layout_alignBottom="@+id/finish_time"
        android:layout_toEndOf="@+id/finish_time" />
</RelativeLayout>